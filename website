const game = voxelEngine({
  generate: function(x, y, z) {
    if (y === 0) return 1;
    if (y < 0) return 2;
    return 0;
  },
  materials: ['grass', 'dirt', 'stone'],
  texturePath: 'https://voxeljs.com/images/textures/',
  worldOrigin: [0, 0, 0],
  chunkDistance: 2,
  controls: { discreteFire: true }
});

document.getElementById('gameContainer').appendChild(game.view);

game.requestPointerLock();
body {
  margin: 0;
  padding: 0;
